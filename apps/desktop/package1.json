{
  "name": "@ocean-drive/desktop",
  "version": "1.0.0",
  "private": true,
  "main": "build/main.js",
  "author": {
    "name": "Otabek Nosirov",
    "email": "otabektuit11@gmail.com"
  },
  "scripts": {
    "publish:mac": "npm run build && electron-builder --mac --publish always ",
    "publish:win": "npm run build && electron-builder --win --publish always",
    "build:mac": "npm run build && electron-builder --mac ",
    "build:win": "npm run build && electron-builder --win ",
    "build:mac:staging": "cross-env DESKTOP_ENV=staging npm run build && electron-builder --mac ",
    "build:win:staging": "cross-env DESKTOP_ENV=staging npm run build && electron-builder --win",
    "build": "yarn clean && yarn build:base && cross-env PUBLIC_URL=./ yarn build:web && cross-env PUBLIC_URL=./ yarn build:web:post",
    "build:base": "yarn compile",
    "build:electron": "electron-builder",
    "build:web": "pushd \"../web\" && cross-env REACT_APP_ELECTRON=true yarn build && popd",
    "build:web:post": "shx cp -Rf ../web/build build/web && shx cp -r ./src/config ./build",
    "clean": "shx rm -f *.tsbuildinfo && shx rm -rf dist && shx rm -rf build && mkdir build",
    "compile": "tsc -b --incremental",
    "prestart": "npm run compile",
    "start": "cross-env DESKTOP_ENV=local nodemon --watch build --watch assets --exec \"electron .\"",
    "start:web": "pushd \"../web\" && cross-env REACT_APP_ELECTRON=true npm run start",
    "lint": "eslint \"src/**/*\"",
    "lint:fix": "eslint \"src/**/*\" --fix"
  },
  "build": {
    "productName": "Ocena Drive",
    "extraMetadata": {
      "name": "Ocena Drive"
    },
    "appId": "conun.io",
    "publish": {
      "provider": "github"
    },
    "files": [
      "assets",
      "build"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "afterSign": "./src/scripts/notarize.js",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "images/icon.png",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "images/icon.ico",
      "legalTrademarks": "Conun",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "certificateFile": "build/config/windows_cert.p12",
      "certificatePassword": "1Superm@n2"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "protocols": [
      {
        "name": "Ocean Drive",
        "schemes": [
          "ocean-drive"
        ]
      }
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "12.0.0",
    "electron-builder": "^22.7.5",
    "electron-devtools-installer": "git+https://github.com/MarshallOfSound/electron-devtools-installer.git",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "nodemon": "^2.0.7",
    "shx": "^0.3.3",
    "typescript": "^4.2.3",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "@sentry/electron": "^2.5.4",
    "@sentry/integrations": "^6.16.1",
    "axios": "^0.19.2",
    "dotenv": "^10.0.0",
    "electron-notarize": "^1.0.0",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.9",
    "fs": "^0.0.1-security",
    "jwt-decode": "^2.2.0",
    "keytar": "^7.9.0",
    "uuid": "^8.3.2"
  }
}