{
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./lib/esm",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2019", "esnext", "dom"],
    "target": "ES2019",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "docs",
    "tests/**/*"
  ],
  "typeRoots":[
    "../../node_modules/@types/index.d.ts"
  ]
}