{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "typeRoots": [
      "@types",
      "../../node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../core"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
